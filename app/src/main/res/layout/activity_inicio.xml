<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="Bienvenidos"
                android:textColor="@color/tierra"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:text="Siembran 200 nuevos árboles en la localidad de Chapinero"
                android:textAlignment="center"
                android:textColor="@color/verde"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TV" />

            <TextView
                android:id="@+id/textView1.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="La Administración Distrital sigue con el objetivo de reverdecer a Bogotá, es por eso que, en las últimas horas, en el marco de la conmemoración del Día Nacional de la Vida Silvestre plantó cerca de 200 árboles en la franja de adecuación de los Cerros Orientales en la localidad de Chapinero."
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView1" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nombre_usuario"
                app:srcCompat="@drawable/siembran_200" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="210 mujeres del Bajo Cauca trabajan en la reforestación de zonas degradadas por la minería"
                android:textAlignment="center"
                android:textColor="@color/verde"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView1" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="Esta, es una iniciativa liderada por madres cabeza de familia, mujeres víctimas de la violencia, desplazadas e indígenas, quienes integran la Red de Viva de Viveros una organización en la que 210 mujeres del Bajo Cauca buscan reforestar y transformar el territorio degradado por la minería y otras economías en el Bajo Cauca antioqueño.  En este proyecto social, liderado por mujeres nació hace dos años y el cual actualmente se ejecuta en los municipios de Valdivia, Tarazá, Cáceres, El Bagre, Nechí, Zaragoza, Caucasia y Vegachí, las mujeres producen las plántulas utilizadas en los proyectos reforestación que opera la Reforestadora Integral en Antioquia especialmente en zonas degradadas por la minería y otras economías."
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:srcCompat="@drawable/two_women" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="El desafío de la deforestación: ¿cómo podemos salvar nuestros bosques?"
                android:textAlignment="center"
                android:textColor="@color/verde"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="Una de las grandes problemáticas ambientales de hoy es la deforestación. Se estima que un árbol adulto sano puede producir alrededor de 118 kilogramos de oxígeno al año y gracias a que absorbe el CO2 de la atmósfera contribuye a reducir los efectos del cambio climático. Sin embargo, cada año se pierden a causa de la deforestación aproximadamente 18 millones de hectáreas de bosque por minuto, que equivalen a 27 canchas de fútbol.  Además de poner en riesgo a especies de fauna y flora, la deforestación le cuesta a la economía mundial hasta 4,5 billones de dólares anuales en pérdida de servicios ecosistémicos. Esto representa un gran obstáculo para el desarrollo de países como Colombia. De acuerdo con cifras oficiales del Ministerio de Ambiente y Desarrollo Sostenible, en 2021 se deforestaron 174.103 hectáreas de bosque en el país, lo que representó un aumento del 1,5 por ciento de este fenómeno en comparación con 2020. Por este motivo, en el último año de la administración de Iván Duque, el Gobierno nacional se propuso la meta de sembrar 180 millones de árboles y la restauración de más de 300.000 hectáreas de suelo degradado."
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:srcCompat="@drawable/desafio" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="La reforestación de Colombia, una meta empresarial"
                android:textAlignment="center"
                android:textColor="@color/verde"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="Frente a este escenario es cada vez más frecuente que las empresas adelanten estrategias para contrarrestar los efectos de la deforestación. Ese es el caso de Boehringer Ingelheim, una de las farmacéuticas más reconocidas a nivel global que, desde hace tres años, adelanta jornadas de siembra de árboles nativos involucrando activamente a sus 220 colaboradores para apoyar la reforestación de la sabana bogotana. “Decidimos adelantar en Colombia una actividad que sea permanente y tenga un verdadero impacto en las comunidades a lo largo del tiempo, y qué mejor manera de alcanzar ese objetivo que apoyar como organización los procesos ratificados por el Gobierno nacional ante las Naciones Unidas para reforestar por completo el país a 2030”, explicó Jorge del Río, director general de la compañía en Colombia."
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:srcCompat="@drawable/sabana" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffdd7a"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/consejos"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/icono_consejos" />

        <ImageView
            android:id="@+id/registro"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/icono_registro" />

        <ImageView
            android:id="@+id/inicio"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/icono_inicio" />

        <ImageView
            android:id="@+id/estadisticas"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/icono_estadisticas" />

        <ImageView
            android:id="@+id/informacion"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/icono_informacion" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>