<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ReforAccion" parent="Theme.Material3.DayNight.NoActionBar">
        <!--Primary brand color. -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryVariant">#FF5722</item>
        <item name="colorOnPrimary">@color/verde</item>
        <!--Secondary brand color. -->
        <item name="colorPrimary">@color/tierra</item>
        <item name="colorPrimaryVariant">#00FFEB3B</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
